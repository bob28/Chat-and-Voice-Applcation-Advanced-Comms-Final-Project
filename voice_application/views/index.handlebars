{{!-- The main page content that will go onto the main handlebars webapge --}}
<section>
    <div class="row">
        {{!-- the username label  --}}
        <h4 id="usernameLabel">Your username is: </h4>
        <p>Click your username to change it!</p>
        <p></p>
        {{!-- allow the user to change usernames --}}
        <div id="usernameDiv">
            {{!-- the username text-box to change it --}}
            <input type="text" id="username" class="mb-5">
            <button class="btn btn-secondary usernameButton " onclick="changeUsername()">Change Username</button>

        </div>
    </div>
    {{!-- the three buttons that will allow user input --}}
    <div class="controller">
        <button class="btn btn-primary off mb-3 " onclick="switchConnection(this)">Go online</button>
        <br>
        <br>
        <button class="btn btn-primary off mb-3" onclick="switchMic(this)">Turn on microphone</button>

        <button class="btn btn-primary off mb-3 mute" onclick="switchMute(this)">Mute</button>

    </div>

</section>

<h5 class="mt-5">Users Online:</h5>
<ul class="listOfUsers" id="listOfUsers">

</ul>

